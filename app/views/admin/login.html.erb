<div id="login_form">
	<% form_tag do %>
		<fieldset>
			<legend>Please Log In</legend>
			
			<div>
				<label for="name">Username:</label><br />
				<%= text_field_tag :name, params[:name] %>
			</div>
			
			<div>
				<label for="password">Password:</label><br />
				<%= password_field_tag :password, params[:password] %>
			</div>
			
			<div>
				<%= submit_tag "login", :id => "login" %>
			</div>
		</fieldset>
	<% end %>
</div>
